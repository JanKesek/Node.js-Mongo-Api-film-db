{
	"title": "Film api",
	"description": "Crud",
	"swagger":"2.0",
	"host":"localhost:3000",
	"basePath":"/",
	"tags": [
		{
			"name": "Films",
			"description": "API for Films Endpoints"
		}
	],
	"schemes": ["http"],
	"consumes": ["application/json"],
	"produces": ["application/json"],
	"paths": {
		"films": {
			"post": {
				"tags": ["Films"],
				"summary": "API Endpoint for adding new films",
				"description": "Create new film in database",
				"parameters":[
					{
						"name":"film",
						"description": "film paramaters for adding another film to database",
						"in": "body",
						"required": "true",
						"schema": {
							"$ref": "#definitions/Film"
						}
					}
				],
				"produces" : ["application/json"],
				"responces":{
					"200":{
						"description" : "new film created",
						"schema": {
							"$ref":"#definitions/Film"
						}
					}
				}
			},
			"get":{
				"tags": ["Films"],
				"summary": "API Endpoint for finding all films",
				"description": "Find all films from the database",
				"parameters": [
					{
						"name": "page",
						"type": "integer",
						"description": "Define the page index for the records",
						"in":"query"
					},
					{
						"name":"perPage",
						"type":"integer",
						"description":"Define limit for number of records (for example:10)",
						"in":"query"
					}
				],
				"produces": ["application/json"],
				"responces":{
					"200": {
						"description":"All the films",
						"schema": {
							"$ref": "#definitions/Films"
						}
					}
				}
			}
		},
		"/films/{id}": {
		
			"parameters":[
				{
						"name":"id",
						"description": "id of the film",
						"in": "path",
						"required": "true",
						"type":"string"
						
				}
			],
			"get":{
				"tags": ["Films"],
				"summary": "API Endpoint for finding single film",
				"description": "Find one film from the database",
				"produces": ["application/json"],
				"responces":{
					"200": {
						"description":"Film has been found",
						"schema": {
							"$ref": "#definitions/Film"
						}
					}
				}
			}
		}
	},
	"definitions":{
		"Film": {
			"required": ["title", "url", "rating"],
			"properties": {

				"title": {
					"type": "string"
				},
				"url": {
					"type": "string"
				},
				"rating": {
					"type": "integer",
					"format": "Int32"
				}
			}
		},
		"Films": {
			"properties":{
				"docs":{
					"type":"array",
					"items": {
					"$ref":"#definitions/Film"
					}
				},
				"total":{
					"type": "integer"
				},
				"pages":{
					"type":"integer"
				},
				"limit":{
					"type":"integer"
				},
				"page":{
					"type":"integer"
				}
			}
		}
	}
}